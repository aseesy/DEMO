{
  "$schema": "https://railpack.com/schema.json",
  "provider": "node",
  "packages": {
    "node": "20"
  },
  "steps": {
    "install": {
      "commands": [{ "cmd": "npm install --legacy-peer-deps" }],
      "caches": ["npm"]
    }
  },
  "caches": {
    "npm": {
      "directory": "node_modules"
    }
  },
  "deploy": {
    "startCommand": "node server.js"
  }
}
