{
  "name": "chat-server",
  "version": "1.0.3",
  "description": "Secure multi-user chat server with WebSocket support",
  "main": "server.js",
  "scripts": {
    "migrate": "node run-migration.js",
    "migrate:status": "node scripts/check-migration-status.js",
    "start": "node server.js",
    "start:with-migrate": "npm run migrate && node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "verify:constraints": "node scripts/verify-migration-035.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathIgnorePatterns='/node_modules/' --testMatch='**/*.integration.test.js'",
    "db:validate": "node scripts/db-validate.js",
    "db:backup": "node scripts/backup-database.js",
    "db:monitor": "node scripts/monitor-database.js",
    "reset:data": "node scripts/reset-data.js",
    "prompts:lint": "node scripts/prompts-lint.js",
    "ai:test": "node scripts/ai-test.js",
    "validate:naming": "node scripts/validate-naming-conventions.js",
    "validate:boundaries": "node ../scripts/check-boundaries.js",
    "scan:duplication": "jscpd src --min-lines 10 --min-tokens 50 --format json --output reports/duplication.json",
    "scan:dependencies": "madge --circular --extensions js src",
    "scan:dependency-graph": "madge --image reports/dependency-graph.svg src",
    "scan:all": "npm run scan:duplication && npm run scan:dependencies && npm run validate:boundaries",
    "test:shutdown": "node scripts/test-shutdown.js",
    "test:shutdown:kill": "node scripts/test-shutdown.js --kill",
    "monitor:tasks": "node scripts/monitor-tasks.js",
    "monitor:events": "node scripts/monitor-events.js"
  },
  "keywords": [
    "chat",
    "websocket",
    "socket.io",
    "real-time"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@socket.io/redis-adapter": "^8.3.0",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "google-auth-library": "^10.5.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.9.0",
    "isomorphic-dompurify": "^2.30.0",
    "jsonwebtoken": "^9.0.2",
    "neo4j-driver": "^5.27.0",
    "nodemailer": "^7.0.12",
    "openai": "^6.7.0",
    "pg": "^8.16.3",
    "sharp": "^0.34.5",
    "socket.io": "^4.8.3",
    "string-similarity": "^4.0.4",
    "web-push": "^3.6.7",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "dependency-cruiser": "^17.3.2",
    "jest": "^30.2.0",
    "jscpd": "^4.0.5",
    "madge": "^8.0.0",
    "nodemon": "^3.1.11",
    "socket.io-client": "^4.8.3",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
