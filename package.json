{
  "name": "liaizen",
  "version": "1.0.0",
  "description": "LiaiZen - Collaborative Parenting Platform",
  "workspaces": [
    "chat-client-vite",
    "chat-server"
  ],
  "scripts": {
    "build": "npm run build -w chat-client-vite",
    "build:client": "npm run build -w chat-client-vite",
    "build:server": "echo 'No build step for server'",
    "test:shutdown": "npm run test:shutdown -w chat-server",
    "test:shutdown:kill": "npm run test:shutdown:kill -w chat-server",
    "monitor:tasks": "npm run monitor:tasks -w chat-server",
    "monitor:events": "npm run monitor:events -w chat-server",
    "restart": "./scripts/restart-servers.sh",
    "restart:backend": "./scripts/restart-servers.sh backend",
    "restart:frontend": "./scripts/restart-servers.sh frontend",
    "start": "./scripts/start-dev.sh",
    "stop": "./scripts/stop-dev.sh",
    "dev": "./scripts/start-dev.sh",
    "dev:safe": "./scripts/start-dev-safe.sh",
    "dev:stack": "node chat-server/scripts/dev-stack.js",
    "watchdog": "./scripts/cpu-watchdog.sh",
    "watchdog:stop": "kill $(cat /tmp/cpu-watchdog.pid 2>/dev/null) 2>/dev/null || echo 'Watchdog not running'",
    "watchdog:status": "ps -p $(cat /tmp/cpu-watchdog.pid 2>/dev/null) 2>/dev/null && echo 'Watchdog is running' || echo 'Watchdog is not running'",
    "kill:emergency": "./scripts/emergency-kill.sh",
    "lint:fix": "node chat-server/scripts/lint-fix.js",
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,md}\"",
    "secrets:scan": "secretlint \"**/*\"",
    "secrets:scan:staged": "git diff --cached --name-only | xargs secretlint",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "npm test -w chat-server -- --passWithNoTests || true",
    "test:frontend": "npm test -w chat-client-vite -- --run --passWithNoTests || true",
    "test:coverage": "npm run test:coverage:backend && npm run test:coverage:frontend",
    "test:coverage:backend": "npm run test:coverage -w chat-server -- --passWithNoTests || true",
    "test:coverage:frontend": "npm run test:coverage -w chat-client-vite -- --passWithNoTests || true",
    "verify:production": "node scripts/test/verify-production.js",
    "test:deploy": "node scripts/test/git-vercel.test.js",
    "tools:git-history": "python3 tools/audit/git_history.py",
    "tools:db-analysis": "python3 tools/audit/db_analysis.py",
    "tools:dashboard": "python3 tools/dashboard/backend.py",
    "tools:socket-diagnostic": "python3 tools/diagnostics/socket_connection.py",
    "tools:all": "npm run tools:git-history && npm run tools:db-analysis && npm run tools:dashboard",
    "validate:env": "node scripts/validate-env.js",
    "validate:railway": "node scripts/validate-railway-env.js",
    "preflight": "node scripts/preflight.mjs",
    "preflight:quick": "node scripts/preflight.mjs --quick",
    "preflight:full": "node scripts/preflight.mjs --health"
  },
  "private": true,
  "engines": {
    "node": ">=20.0.0 <25.0.0"
  },
  "packageManager": "npm@10.0.0",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.5",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "secretlint": "^11.2.5"
  }
}
